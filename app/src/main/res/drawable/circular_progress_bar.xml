<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="1"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="1080" >

    <shape
        android:innerRadius="63dp"
        android:shape="ring"
        android:thickness="4dp"
        android:useLevel="false" >
        <size
            android:height="150dp"
            android:width="150dp" />

        <gradient
            android:centerColor="#802AD5EC"
            android:centerY="0.5"
            android:endColor="#ff2AD5EC"
            android:startColor="#002AD5EC"
            android:type="sweep"
            android:useLevel="false" />
    </shape>
</rotate>